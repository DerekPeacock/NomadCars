@model IEnumerable<NomadCars.Models.Staff>

@{
    ViewBag.Title = "Staff";
}
<header class="jumbotron">
    <h1>Nomad Cars - Staff Team</h1>
</header>


<p>
    @Html.ActionLink("Add New Staff", "Create", null, new { @class = "btn btn-info btn-large" })
</p>
<table class="table table-bordered table-hover">
    <tr class="bg-info">
        <th>
            Full Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobPosition)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            Photo
        </th>
        <th>
            Actions
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Person.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Department)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobPosition)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            <img src="~/Images/Staff/@item.ImageURL" 
                 alt="Staff Photo" , title="Staff Photo" style="height:50px" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StaffID}, new { @class = "btn btn-success " })
            @Html.ActionLink("Details", "Details", new { id = item.StaffID }, new { @class = "btn btn-info"})
            @Html.ActionLink("Delete", "Delete", new { id = item.StaffID }, new { @class = "btn btn-danger"})
        </td>
    </tr>
}

</table>
